{
    "manifest_version": 2,
    "name": "Anilist Random Selection",
    "description": "Randomly select an item from your Anilist planning list",
    "version": "1.0",
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://anilist.co/user/*/animelist/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png"
    },
    "permissions": [
        "activeTab"
    ]
}